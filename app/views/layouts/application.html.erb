<!DOCTYPE html>
<html>
  <head>
    <title>RestaurantApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <div class="navbar">
    <%= link_to "Home", root_path %>
    <% if !logged_in?%>
      <%= link_to "Create New Account", new_user_path %>
      <%= link_to "Login" , login_path %>
    <%else%>
      <%= link_to "Logout", logout_path%>
      <%= link_to "#{current_user.name} Profile", current_user%>
      <%= link_to "Current Order", order_path(current_order) %>
      <%= link_to "Analytics", analytics_path%>
    <%end%>
    </div>

    <div class="spacer">
      &nbsp;

    </div>
    <%= yield %>

</html>
