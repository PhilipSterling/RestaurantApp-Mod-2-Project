<%= stylesheet_link_tag "drinkshow.css" %>

<body class="drinkshow">



<div class="card">


<h1><%=@drink.name%></h1> <br><br>
<%=image_tag(url_for(@drink.imgurl))%>

<p><%= @drink.desc %></p>
<p class="price"></p>Price Per Drink: <%='%.2f' %  @drink.price%>


<% if current_order.drinks.include? @drink%>
<%= link_to "REMOVE FROM ORDER", remove_drink_path(@drink) %>
<%end%>
<%= link_to "ADD TO ORDER", add_drink_path(@drink) %>
</div>
</body>
